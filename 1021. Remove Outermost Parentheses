Time: O(n*n)  Space: O(n)

class Solution {
public:
    string removeOuterParentheses(string s) {
        stack<char> st;
        int k=0;
        string ans="";
        for(int i=0;i<s.size();i++){
            if(s[i] == '(' ){k++;}
            else 
                k--;
            st.push(s[i]);
            if(k==0){
                st.pop();
                string str="";
                while(st.size()>1){str=st.top()+str;st.pop();}
                st.pop();
                ans+=str;
            }
        }
        return ans;
    }
};

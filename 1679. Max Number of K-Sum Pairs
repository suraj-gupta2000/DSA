Time: O(n log n)
Space: O(1)

class Solution {
public:
    int maxOperations(vector<int>& nums, int k) {
        int res=0;
        int i=0,j=nums.size()-1;
        sort(nums.begin(),nums.end());
        while(i<j){
            int temp=nums[i]+nums[j];
            if(temp==k){
                res++;
                i++;j--;
            }else if(temp<k){
                i++;
            }else{
                j--;
            }
        }
        return res;
    }
};

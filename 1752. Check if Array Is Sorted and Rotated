Time: O(n)  Space: O(1)

class Solution {
public:
    bool check(vector<int>& nums) {
        int n=nums.size();
        int flag=0;
        for(int i=0;i+1<n;i++){
            if(nums[i]>nums[i+1]){
                flag++;
            }
        }
        if(flag>1)
            return false;
        else if(flag==1){
            if(nums[0]>=nums[n-1])
                return true;
            return false;
        }
        return true;
    }
};

Time: O(n*Log n)  Space: O(2*n)

class Solution {
public:
    vector<int> sortEvenOdd(vector<int>& nums) {
        int n=size(nums);
        vector<int> v1,v2;
        for(int i=0;i<n;i++){
            if(i&1)
                v1.push_back(nums[i]);
            else
                v2.push_back(nums[i]);
        }
        sort(begin(v1),end(v1));
        sort(begin(v2),end(v2));
        int i=size(v1),j=0;
        for(int k=0;k<n;k++){
            if(k&1)
                i--,nums[k]=v1[i];
            else
                nums[k]=v2[j++];
        }
        return nums;
    }
};

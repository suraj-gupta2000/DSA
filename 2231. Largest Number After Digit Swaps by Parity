Time: O(n*Log n) Space: O(3*n)

class Solution {
public:
    int largestInteger(int num) {
        vector<int> v1,v2,v3;
        int temp=num;
        while(temp){
            int x=temp%10;
            if(x&1)
                v1.push_back(x);
            else
                v2.push_back(x);
            v3.push_back(x);
            temp/=10;
        }
        sort(begin(v1),end(v1));
        sort(begin(v2),end(v2));
        int i=0,j=0;
        for(int k=0;k<size(v3);k++){
            if(v3[k]&1){
                v3[k]=v1[i++];
            }else
                v3[k]=v2[j++];
        }
        int res=0;
        for(int k=size(v3)-1;k>=0;k--)
            res=res*10+v3[k];
        return res;
    }
};

Time : O(n)  Space: O(1)

class Solution {
public:
    int countAsterisks(string s) {
        int n=size(s);
        int k=0,res=0;
        for(int i=0;i<n;i++){
            if(s[i]=='*' and k%2==0)
                res++;
            else if(s[i]=='|')
                k++;
        }
        return res;
    }
};

Time: O(n*Log n)  Space: O(1)

class Solution {
public:
    int fillCups(vector<int>& am) {
        int res=0;
        sort(begin(am),end(am));
        while(am[2]>0){
            res++;
            am[2]--;am[1]--;
            sort(begin(am),end(am));
        }
        return res;
    }
};

Time: O(1)  Space: O(1)

class Solution {
public:
    int fillCups(vector<int>& am) {
        int res=0;
        int mx=max(am[0],max(am[1],am[2]));
        int sum=am[0]+am[1]+am[2]+1;
        res=max(mx,sum/2);
        return res;
    }
};

Time: O(n^3)  Space: O(1)

class Solution {
public:
    int arithmeticTriplets(vector<int>& nums, int diff) {
        int res=0;
        int n=size(nums);
        for(int i=0;i<n-2;i++){
            for(int j=i+1;j<n-1;j++){
                if(nums[j]-nums[i]==diff){
                    for(int k=j+1;k<n;k++){
                        if(nums[k]-nums[j]==diff)
                            res++;
                    }
                }
            }
        }
        return res;
    }
};

Time: O(n)  Space: O(n)
-->Two Traversal

class Solution {
public:
    int arithmeticTriplets(vector<int>& nums, int diff) {
        int res=0;
        map<int,bool> m;
        for(auto& x: nums)
            m[x]=true;
        for(auto& x: nums){
            if(m[x+diff] and m[x+2*diff])
                res++;
        }
        return res;
    }
};

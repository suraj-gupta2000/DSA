TC: O(n)  SC: O(max(level))
--> Level Traversal

class Solution {
public:
    vector<double> averageOfLevels(TreeNode* root) {
        vector<double> res;
        queue<TreeNode*> q;
        q.push(root);
        while(!q.empty()){
            int n=q.size();
            double sum=0.0;
            for(int i=0;i<n;i++){
                TreeNode* curr=q.front();q.pop();
                if(curr->left)
                    q.push(curr->left);
                if(curr->right)
                    q.push(curr->right);
                sum+=curr->val;
            }
            res.push_back(sum/n);
        }
        return res;
    }
};

Time: O(n)  Space: O(1)

class Solution {
public:
    vector<int> sortArrayByParityII(vector<int>& nums) {
        int i=0,j=1,n=nums.size();
        while(i<n and j<n){
            while(i<n and !(nums[i]&1)){i+=2;}
            while(j<n and nums[j]&1){j+=2;}
            if(i<n and j<n){
                swap(nums[i],nums[j]);
                i+=2,j+=2;
            }   
        }
        return nums;
    }
};

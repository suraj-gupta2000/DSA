Time: n*Logn  Space: O(n)

class Solution {
public:
    vector<int> sortedSquares(vector<int>& nums) {
        int n=nums.size();
        for(int i=0;i<n;i++){
            nums[i]*=nums[i];
        }
        sort(begin(nums),end(nums));
        return nums;
    }
};

Time: O(n)  Space: O(n)

class Solution {
public:
    vector<int> sortedSquares(vector<int>& nums) {
        int n=nums.size();
        vector<int> res(n);
        int l=0,r=n-1;
        for(int i=n-1;i>=0;i--){
            if(abs(nums[r])>=abs(nums[l]))
                res[i]=nums[r]*nums[r],r--;
            else
                res[i]=nums[l]*nums[l],l++;
        }
        return res;
    }
};

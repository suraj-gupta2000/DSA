CPP
--> method 1
class Solution {
public:
    string toLowerCase(string s) {
        string res="";
        for(int i=0;i<s.size();i++){
            res+=tolower(s[i]);
        }
        return res;
    }
};

-->method 2

class Solution {
public:
    string toLowerCase(string s) {
        for(int i=0;i<s.size();i++){
            if(s[i]<='Z' and s[i]>='A')
                s[i]=s[i]+32;
        }
        return s;
    }
};

-->method 3

class Solution {
public:
    string toLowerCase(string s) {
        transform(s.begin(),s.end(),begin(s),::tolower);
        return s;
    }
};
